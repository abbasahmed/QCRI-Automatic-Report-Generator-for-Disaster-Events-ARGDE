              <button id="scatterplot" class="dropdown-item frequencyType" onclick="toggle_graph_type(this.id, 'frequency');">Scatter Plot</button>
            </div>
          </div>
          <div class="dropdown" style="float:right; padding-right:1em;">
            <a id="frequencyResButton" class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Minute
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <button id="minute" class="dropdown-item frequencyRes" onclick="toggle_graph_res(this.id, 'frequency');">Minute</button>
              <button id="hour" class="dropdown-item frequencyRes" onclick="toggle_graph_res(this.id, 'frequency');">Hour</button>
              <button id="day" class="dropdown-item frequencyRes" onclick="toggle_graph_res(this.id, 'frequency');">Day</button>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div id="FrequencyChart"></div>
        </div>
      </div>

