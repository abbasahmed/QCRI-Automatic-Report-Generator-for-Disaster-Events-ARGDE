      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-area-chart"></i> Tweet Frequency
          <button type="button" class="btn btn-secondary" style="float:right;" onclick="reset('frequency');">Reset</button>
          <div class="dropdown" style="float:right; padding-right:1em;">
            <a id="frequencyTypeButton" class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Bar
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <button id="bar" class="dropdown-item frequencyType" onclick="toggle_graph_type(this.id, 'frequency');">Bar</button>
              <button id="line" class="dropdown-item frequencyType" onclick="toggle_graph_type(this.id, 'frequency');">Line</button>
              <button id="stacked-bar" class="dropdown-item frequencyType" onclick="toggle_graph_type(this.id, 'frequency');">Stacked Bar</button>
