<% title = 'Reset Password' %>
<link href="/css/precompute.css" rel="stylesheet">
<div id="edit_page" class="container">
<div class="card mb-3">
  <div class="card-header">
    <strong>Reset Password</strong>
  </div>
  <div class="card-body">
    <br>
    <% if(flash && flash.err){ %>
      <div class="alert alert-success alert-dismissible">
        <% flash.err.forEach(function(error){ %>
          <span>
            <%= error.message %>
          </span>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        <% }) %>
      </div>
    <% } %>
    <form accept-charset="UTF-8" role="form" action="/resetpassword/<%= username %>" method="post">
      <div class="form-group">
        <h4><label for="old">Enter Old Password</label></h4>
        <input type="password" class="form-control" id="old" placeholder="Old Password" name="oldpassword">
      </div>
      <div class="form-group">
        <h4><label for="new">Enter New Password</label></h4>
        <input type="password" class="form-control" id="new" placeholder="New Password" name="newpassword">
      </div>
      <div class="form-group">
        <h4><label for="repeat">Confirm New Password</label></h4>
        <input type="password" class="form-control" id="repeat" placeholder="Confirm Password" name="repeatpassword">
      </div>
      <button type="submit" class="btn btn-primary">Reset Password</button>
      <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
  </form>
  <br>
  </div>
</div>
</div>
